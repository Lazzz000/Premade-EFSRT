@using JOTATECH_SOLUCIONES.Models;
@{
    // Obtener el objeto Usuario de la sesión de forma segura
    Usuario usuario = Session["UsuarioActivo"] as Usuario;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - JOTA TECH Soluciones Tecnológicas</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">

</head>
<body>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Home")" class="navbar-brand">
                <img src="@Url.Content("~/Content/Images/logo-jotatech2.png")"
                     alt="Logo"
                     style="height: 80px; margin-right: 2px; display: inline-block;">
            </a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Alternar navegación" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">

                <ul class="nav navbar-nav me-auto">
                    <li>@Html.ActionLink("Dashboard", "Index", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Productos", "Index", "Producto", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Ventas", "Crear", "Venta", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Reportes", "Index", "Reporte", new { area = "" }, new { @class = "nav-link" })</li>
                </ul>

                <ul class="nav navbar-nav navbar-right ms-auto">
                    @if (usuario != null)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-white" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="fas fa-user-circle me-1" style="font-size: 1.5rem;"></i>
                            </a>

                            <ul class="dropdown-menu dropdown-menu-end">

                                <li class="dropdown-item disabled text-dark">
                                    <strong>@usuario.NombreCompleto</strong>
                                </li>

                                <li class="dropdown-item disabled text-secondary">
                                    <small>@usuario.Rol</small>
                                </li>

                                <li><hr class="dropdown-divider"></li>

                                <li>
                                    @Html.ActionLink("Cerrar Sesión", "CerrarSesion", "Acceso", new { area = "" }, new { @class = "dropdown-item" })
                                </li>
                            </ul>
                        </li>
                    }
                </ul>

            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - JOTA TECH Soluciones Tecnológicas - Cibertec</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>