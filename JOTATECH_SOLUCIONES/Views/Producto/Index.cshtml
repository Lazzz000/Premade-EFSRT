@model List<JOTATECH_SOLUCIONES.Models.Producto>
@{
    ViewBag.Title = "Gestión de Productos";

    // 1. Obtener el rol del usuario de la sesión
    string rolUsuario = Session["RolUsuario"] as string ?? string.Empty;

    // 2. Definir una variable booleana para facilitar la verificación en el HTML
    bool esAdministrador = rolUsuario == "Administrador";
}

@using System.Linq

<h2 class="mt-4">@ViewBag.Title</h2>
<hr />

<p>
    @if (esAdministrador)
    {
        @Html.ActionLink("Nuevo Producto", "Guardar", "Producto", null, new { @class = "btn btn-primary" })
    }
</p>

<table class="table table-striped table-hover mt-3">
    <thead class="table-dark">
        <tr>
            <th>@Html.DisplayNameFor(model => model.First().Codigo)</th>
            <th>@Html.DisplayNameFor(model => model.First().Descripcion)</th>
            <th>@Html.DisplayNameFor(model => model.First().PrecioVenta)</th>
            <th>@Html.DisplayNameFor(model => model.First().Stock)</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Codigo)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@Html.DisplayFor(modelItem => item.PrecioVenta)</td>
                <td>@Html.DisplayFor(modelItem => item.Stock)</td>
                <td>
                    @if (esAdministrador)
                    {
                        @Html.ActionLink("Editar", "Guardar", new { id = item.IdProducto }, new { @class = "btn btn-sm btn-warning" })

                        <button class="btn btn-sm btn-danger" onclick="alert('Funcionalidad de eliminar pendiente')">Eliminar</button>
                    }
                    else
                    {
                        <span class="text-muted">Solo vista</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>